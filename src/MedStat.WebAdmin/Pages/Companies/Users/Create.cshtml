@page "/Companies/{CompanyId:int}/Users/Create"

@using Microsoft.AspNetCore.Mvc.Localization
@using MedStat.WebAdmin.Classes.SharedResources

@model CompanyUserCreatePageModel

@inject IHtmlLocalizer<CompanyResource> CmpLocalizer

@{
	Layout = "_PopupLayout";
}

<div class="ms-pagecontent">

	<form method="post" class="ms-form-container">

		@Html.EditorFor(m => m.CmpUserData, "~/Pages/Companies/Users/_CmpUser.cshtml")

		<button class="btn btn-primary" type="submit">@CmpLocalizer["Create"]</button>

	</form>

</div>